<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gcode.strokeguide.NonResponding"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jeżeli poszkodowany nie odpowiada nalezy oczyścić jamę ustną oraz sprawdzić oddech."
        android:id="@+id/textView8"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    oceń wzrokiem ruchy klatki piersiowej"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    nasłuchuj przy ustach szmerów"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    staraj się wyczuć oddech na policzku"
        android:id="@+id/checkBox9"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nie"
        android:id="@+id/button4"
        android:background="#d50000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#ffffff"
        android:onClick="goToRKO"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tak"
        android:id="@+id/button5"
        android:background="@android:color/holo_blue_light"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:onClick="goToBreathing"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Czy poszkodowany oddycha?"
        android:id="@+id/textView9"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/button4"
        android:layout_alignEnd="@+id/checkBox7" />
</RelativeLayout>
