<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gcode.strokeguide.RKO"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Przeprowadź RKO (resuscytację krążeniowo-oddechową)"
        android:id="@+id/textView10"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    wykonaj 30 uciśnięć mostka"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    wykonaj dwa wdechy"
        android:id="@+id/checkBox11"
        android:layout_below="@+id/checkBox10"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/checkBox10"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    kontynuuj RKO w proporcjach 30:2"
        android:id="@+id/checkBox12"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/checkBox11"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Nie przerywaj czynności ratowniczych do czasu przyjechania pogotowia, odzyskania przytomności przez poszkodowanego lub wyczerpania sił. "
        android:id="@+id/textView11"
        android:layout_below="@+id/checkBox12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OD POCZĄTKU"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@android:color/holo_blue_light"
        android:layout_alignParentEnd="true"
        android:onClick="goToStartFromRKO"/>
</RelativeLayout>
